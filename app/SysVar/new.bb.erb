<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New SysVar</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @sys_var.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Var: </td>
                <td class="itemValue"><input type="text" name="sys_var[Var]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Val: </td>
                <td class="itemValue"><input type="text" name="sys_var[Val]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
