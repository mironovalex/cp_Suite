<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @tmp.VAL %></h1>
    <a href="<%= url_for :action => :show, :id => @tmp.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @tmp.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @tmp.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="tmp[VAL]" class="fieldLabel">Val</label>
            <input type="text" id="tmp[VAL]" name="tmp[VAL]" value="<%= @tmp.VAL %>" <%= placeholder( "Val" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
