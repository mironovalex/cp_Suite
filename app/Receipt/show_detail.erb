<div data-role="page" id="SDR" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>Заказ :<%= @JourId %></h1> 
    <a href="<%= url_for :action => :show_recipt_ %>" class="ui-btn-right">Назад</a>     
  </div>   
  
<script type="text/javascript">   

      function nulling() {              
        var element1 = document.getElementById('msg1');  

        element1.innerHTML = "";                                   
        var element2 = document.getElementById('msg2');  

        element2.innerHTML = "";                                   
      }; 

      $('[data-role=page]').live('pageshow', function (event) {
        setTimeout(function() {   
          $("#SDR").focus();
         }, 1);   
      }); 
      
      $("#SDR").keyup(function(event) {      
        if(event.keyCode==27){  //alert('jo 2');                           
          $.ajax({        
          type: "GET",                               
          url: "<%= url_for :action => :show_recipt_2 %>",
          data: {}
          } );               
        }                  
        }); 
      
      function msg1(val) {        
        var element = document.getElementById('msg1');  
        element.innerHTML = val;                                                                    
      };       

      function msg2(val) {              
        var element = document.getElementById('msg2');  
        element.innerHTML = val;                                                                    
      };       
             
      function null_receipt() {
      $.get('/app/Receipt/null_receipt', {});       
      }                

      function upload_receipt() {
      $.get('/app/Receipt/upload_receipt', {});       
      }        

      function begin_receipt() {
      $.get('/app/Receipt/begin_receipt', {});       
      }          
                
</script>   
  
<div data-role="content">

      <table border="0">
      <tr>
      <td><label id = "msg1" style="color: green;  font-size: 20px;"><%=$msg1%></label> </td>
      </tr>
     </table>
      <table border="0">
      <tr>
      <td><label id = "msg2" style="color: red;  font-size: 20px;"><%=$msg2%></label> </td>
      </tr>
     </table>  
       
      <table border="0">
      <tr>
      <td width = "70px" style="min-width:70px; max-width:70px">Заказ:
        <td style="color: #FFCC00; min-width:80px; max-width:80px;" width = "90px"><%= @JourId%></td>
       </td>
      <td width = "70px" style="min-width:70px; max-width:70px">Дата пост.:
        <td style="color: #FFCC00; min-width:90px; max-width:90px;" width = "90px"><%= @ShipDate%></td>
      </td>
      </tr>
      </table>
      
      <table border="0">
      <tr>
      <td width = "70px" style="min-width:70px; max-width:70px">Поставщик:
        <td style="color: #FFCC00;min-width:250px; max-width:250px; overflow:hidden;" width = "250px"><NOBR><%= @VendId.gsub(/["']/,"").to_s%></NOBR></td>
      </td>      
      </tr>
      </table>
      
      <table border="0">
      <tr>
      <td width = "70px" style="min-width:70px; max-width:70px">Заказано:
        <td style="color: #FFCC00; min-width:80px; max-width:80px;" width = "80px"><%= @OrderedQty%></td>
      </td>
      <td width = "90px" style="min-width:90px; max-width:90px">Зак. принят:
        <td style="color: #FFCC00; min-width:70px; max-width:70px;" width = "70px"><%= @IsReceived%></td>
      </td>
      </tr>
      <tr>
      <td width = "80px" style="min-width:80px; max-width:80px">Принято:
        <td style="color: #FFCC00; min-width:70px; max-width:70px;" width = "70px"><%= @ReceivedQty%></td>
      </td>
      <td width = "100px" style="min-width:100px; max-width:100px">Зак. выгружен:
        <td style="color: #FFCC00; min-width:60px; max-width:60px;" width = "60px"><%= @Imported%></td>
      </td>
      </tr>
      </table>
    
      <table border="0">
      <tr>
      <td width = "150px" style="min-width:150px; max-width:150px"> <input type="submit" onclick = "null_receipt();" value="Обнулить"/> </td>
      <td width = "150px" style="min-width:150px; max-width:150px"> <input type="submit" onclick = "upload_receipt();" value="Выгрузить"/> </td>  
      </tr>    
      </table>                        
            
      <table border="0">
      <tr>
      <td width = "300px" style="min-width:300px; max-width:300px"> <input type="submit" onclick = "begin_receipt();" value="Принять"/> </td>
      </tr>    
      </table>        
            
      
</div>

</div>