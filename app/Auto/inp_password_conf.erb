<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>Задайте пароль</h1> 
    <label style="color: #FFFFFF;  font-size: 16px; text-align: center;"><%=$chk_loc_name%>|<%=$chk_user%></label> 
  </div>  

<script type="text/javascript">
  function alarm(){var snd = new Audio("/public/Error.wav");   snd.play();}   

  function form_focus() {
    var element = document.getElementById('PASSWORD1');
    element.select();
    element.focus();
  }        

  function null_val() {
    var element1 = document.getElementById('PASSWORD1');
    element1.value = '';
    var element2 = document.getElementById('PASSWORD2');
    element2.value = '';
  }   
   
function change_rejim() {
  var element = document.getElementById('PASSWORD1');
  var elem    = document.getElementById('PASSWORD2');  
  if (element.type == 'password')
    {
    element.type = 'text';
    elem.type = 'text';
    }
  else
    {
    element.type = 'password';
    elem.type = 'password';
    }         
  end
}      
       
  $('[data-role=page]').live('pageshow', function (event) {
    $('input:not(:hidden):first').focus();
  });  
    

     
</script>    
  
<body onload="form_focus();">
<div data-role="content">
  <form method="GET" action="<%= url_for :action => :password_inp %>">
    <label style="color: #FF4500;  font-size: 20px; text-align: center;"><%=$msg%></label> 
    <label style="color: #FFFFFF;  font-size: 20px; text-align: center;">Задайте свой пароль</label> 
    <div data-role="fieldcontain">
    
      <label for="PASSWORD1" class="itemLabel">Пароль:</label>
      <input type="password" id="PASSWORD1" name="PASSWORD1" class="itemValue"/>
      <label for="PASSWORD2" class="itemLabel">Подтв:</label>
      <input type="password" id="PASSWORD2" name="PASSWORD2" class="itemValue"/>        
      
        <table border="0"> 
        <tr>  
        <td>
          <label class="itemLabel" style="font-size: 12pt;">Скрыть пароль</label>
        </td>
        <td>  
          <input type="checkbox" checked id="P_CH"  style="height:20px; width:20px"  name="P_CH" onclick = "change_rejim();" /> 
        </td>     
        </tr>
        </table>          
        
    </div>
    <input type="submit" value="Ввод"/>
  </form>
</div>
</body>

</div>