<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>Пароль</h1> 
    <label style="color: #FFFFFF;  font-size: 16px; text-align: center;"><%=$chk_loc_name%>|<%=$chk_user%></label> 
  </div>  

<script type="text/javascript">
  function alarm(){var snd = new Audio("/public/Error.wav");   snd.play();}   

  function form_focus() {
    var element = document.getElementById('PASSWORD');
    element.select();
    element.focus();
  }  

  function change_rejim() {
    var element = document.getElementById('PASSWORD');
    if (element.type == 'password')
      element.type = 'text';
    else
      element.type = 'password';        
    end
  }         
    
  $('[data-role=page]').live('pageshow', function (event) {
    $('input:not(:hidden):first').focus();
  });  


</script>    
  
<body onload="form_focus();">
<div data-role="content">
  <form method="POST" action="<%= url_for :action => :password_check %>">
    <div data-role="fieldcontain">
      <label for="PASSWORD" class="itemLabel">Пароль:</label>
      <input type="TEXT" id="PASSWORD" name="PASSWORD" class="itemValue"/>
      
      <table border="0"> 
      <tr>  
      <td>
        <label class="itemLabel" style="font-size: 12pt;">Скрыть пароль</label>
      </td>
      <td>  
        <input type="checkbox" id="P_CH"  style="height:20px; width:20px"  name="P_CH" onclick = "change_rejim();" /> 
      </td>     
      </tr>
      </table>    
        
    </div>       
    <input type="submit" value="Ввод"/>
  </form>
</div>
</body>

</div>